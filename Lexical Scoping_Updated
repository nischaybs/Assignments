makeCacheMatrix <- function(x = matrix()) {    ## define the argument with default mode of "matrix
  invr <- NULL                                  ## initialize 'invr' as NULL; holds value of inverse matrix
  set <- function(y) {                         ## define the set function to assign new value of matrix in parent                                                  environment
    x <<- y                                    ## assign a value y to an object x
    invr <<- NULL                                 ## if there is a new matrix, reset inv to NULL
  }
  get <- function() x                          ##get fucntion - returns value of the matrix argument
  setinverse <- function(invrs) invr <<- invrs  ## assigns value of inv in parent environment
  getinverse <- function() invr                 ## gets the value of invr where called
  list(set = set, get = get,
       setmean = setmean,
       getmean = getmean)                      ## this is inorder to refer the functions with the $ operator
}
cacheSolve <- function(x, ...) {               ## Return a matrix that is the inverse of 'x'
  invr <- x$getinverse()
  if(!is.null(invr)) {
       return(invr)
  }
  data <- x$get()
  invr <- solve(data, ...)
  x$setinverse(invr)
  inv
}
